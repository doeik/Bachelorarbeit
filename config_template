lxc.network.type = empty
lxc.rootfs = {container}rootfs

# Common configuration
#lxc.include = /usr/share/lxc/config/debian.common.conf

# Default pivot location
lxc.pivotdir = lxc_putold

# Container specific configuration
lxc.mount = {container}fstab
lxc.utsname = {name}
lxc.arch = amd64
lxc.cap.drop = audit_control audit_write chown dac_override dac_read_search fowner fsetid ipc_lock ipc_owner kill lease linux_immutable mac_admin mac_override mknod net_admin net_bind_service net_broadcast net_raw setgid setfcap setpcap setuid setfcap setpcap sys_admin sys_boot sys_chroot sys_module sys_nice sys_pacct sys_ptrace sys_rawio sys_resource sys_time sys_tty_config syslog wake_alarm

#no implicit access to devices
lxc.cgroup.devices.deny = a

# /dev/null and zero
lxc.cgroup.devices.allow = c 1:3 rwm
lxc.cgroup.devices.allow = c 1:5 rwm

# /dev/urandom,/dev/random
lxc.cgroup.devices.allow = c 1:9 rwm
lxc.cgroup.devices.allow = c 1:8 rwm

# rtc
lxc.cgroup.devices.allow = c 254:0 rwm

# standard mount point
lxc.mount.entry = proc {container}rootfs/proc proc nosuid,nodev,noexec 0 0
#lxc.mount.entry = sysfs {container}rootfs/sys sysfs nosuid,nodev,noexec 0 0
#lxc.mount.entry = devpts {container}rootfs/dev/pts devpts newinstance,ptmxmode=0666,nosuid,noexec 0 0
#lxc.mount.entry = varrun {container}rootfs/var/run tmpfs mode=755,size=4096k,nosuid,nodev,noexec 0 0
#lxc.mount.entry = varlock {container}rootfs/var/lock tmpfs size=1024k,nosuid,nodev,noexec 0 0
#lxc.mount.entry = shm {container}rootfs/dev/shm tmpfs size=65536k,nosuid,nodev,noexec 0 0

# cgroup limits
# 100MB
lxc.cgroup.memory.limit_in_bytes = 104857600
# unable to test memsw.limit_in_bytes because no swap present on current system
# 100MB (memory + swap)
#lxc.cgroup.memory.memsw.limit_in_bytes = 104857600
# 12MB
lxc.cgroup.memory.kmem.limit_in_bytes = 12582912
# 1024 equals 100%
lxc.cgroup.cpu.shares = 256